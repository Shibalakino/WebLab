@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 offset-md-3 login-register-container">
    <div class="card login-logout-tab">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="~/Identity/Account/Login">@localizer["Log in"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Identity/Account/Register">@localizer["Register"]</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@RenderSection("Scripts", required: false)
}