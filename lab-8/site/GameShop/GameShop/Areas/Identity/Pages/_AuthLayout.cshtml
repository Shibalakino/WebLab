@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 offset-md-3 login-register-container">
    <div class="card login-logout-tab">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    @*<a asp-area="" asp-controller="Auth" asp-action="Login">Login</a>*@
                    <a class="nav-link" href="~/Identity/Account/Login">@localizer["Log in"]</a>
                </li>
                <li class="nav-item">
                    @*<a asp-area="" asp-controller="Home" asp-action="Index">Register</a>*@
                    <a class="nav-link" href="~/Identity/Account/Register">@localizer["Register"]</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            var current = this.location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr("href")) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}